<Window x:Class="KCKProjektWPF.Windows.PauseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KCKProjektWPF.Windows"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="PauseWindow" Height="450" Width="800" Background="Black" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Margin="5" gif:ImageBehavior.AnimatedSource="pack://application:,,,/KCKProjektWPF;component/Image/escape.gif"></Image>
        <Label Foreground="White" Grid.Row="1" HorizontalAlignment="Center" Margin="5">Press ESC to return to game</Label>
    </Grid>
</Window>
